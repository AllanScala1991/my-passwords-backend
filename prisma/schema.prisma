generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String
  username  String
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())
  Password  Password[]
}

model Password {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  username  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
